{
  "name": "steven-mern-starter-kit",
  "version": "1.0.0",
  "description": "A Javascript stack starter kit",
  "main": "main.js",
  "author": "Chen Fang",
  "license": "MIT",
  "keywords": [
    "Node",
    "Koa",
    "React",
    "Redux",
    "Mongodb"
  ],
  "engines": {
    "node": ">=7.4.0",
    "npm": "^4.2.0"
  },
  "scripts": {
    "clean": "rm -rf public",
    "dev": "better-npm-run dev",
    "start": "better-npm-run start",
    "forever": "better-npm-run forever",
    "compile": "better-npm-run compile",
    "test": "better-npm-run test",
    "test:dev": "npm run test -- --watch",
    "deploy": "better-npm-run deploy",
    "deploy:dev": "better-npm-run deploy:dev",
    "deploy:prod": "better-npm-run deploy:prod",
    "lint": "eslint src tests server",
    "lint:fix": "npm run lint -- --fix",
    "codecov": "cat coverage/*/lcov.info | codecov"
  },
  "betterScripts": {
    "compile": {
      "command": "babel-node bin/compile",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "dev": {
      "command": "nodemon --exec babel-node bin/start",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "deploy": {
      "command": "npm run clean && npm run compile",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "deploy:dev": {
      "command": "npm run deploy",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "deploy:prod": {
      "command": "npm run deploy",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "start": {
      "command": "babel-node bin/start",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "forever": {
      "command": "forever start -c node_modules/.bin/babel-node bin/start",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "babel-node ./node_modules/karma/bin/karma start build/karma.conf",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "app:*"
      }
    }
  },
